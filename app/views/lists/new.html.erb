<div class="fullCard"> 
        <div class="cardContent">

                <h1>Create a New List</h1>
                <%= form_for @list do |f| %>
                        <%= f.label :title %>
                        <%= f.text_field :title %>
                        <br><br>
                        <%= f.submit "Create List"%>
                <% end %>
                <br>
                <% if @list.errors.any? %>
                        <% @list.errors.full_messages.each do |message| %>
                        *<%= message %>
                        <% end %>
                <% end %>
        </div>
</div>
        