<div class="fullCard"> 
    <div class="cardContent">
        <h1>Create a Task</h1>
        <%= form_for @task do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :description %>
            <%= f.text_field :description%><br>

            
            <%= f.label :start_date %>
            <%= f.date_field :start_date%>
            
            <%= f.label :end_date %>
            <%= f.date_field :end_date%><br>

            <%= f.label :start_time %>
            <%= f.time_field :start_time%>
            
            <%= f.label :end_time %>
            <%= f.time_field :end_time%><br><br>

            <%= f.collection_select :list_id, List.all, :id, :title, prompt: "Select list" %>

            <%= f.submit "Update Task"%>

            <% end %>
    </div>
</div>