<div class="fullCard"> 
    <div class="cardContent">
        <h1>Create a Task</h1>
        <%= form_for @task do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %><br>
            
            <%= f.label :description %>
            <%= f.text_field :description%><br>

            
            <%= f.label :start_date %>
            <%= f.datetime_field :start_date%><br>
            
            <%= f.label :end_date %>
            <%= f.datetime_field :end_date%><br>

            <%= f.label :list %>
            <%= f.collection_select :list_id, List.all, :id, :title, prompt: "Select list" %><br><br>

            <%= f.submit "Create Task"%>

        <% end %>
    </div>
</div>

